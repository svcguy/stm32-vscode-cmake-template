{
    // These settings remove CMake Tools Debug and launch buttons
    "cmake.statusbar.advanced": {
        "debug": {
            "visibility": "hidden"
        },
        "launch": {
            "visibility": "hidden"
        },
        //"build": {
        //    "visibility": "hidden"
        //},
        //"buildTarget": {
        //    "visibility": "hidden"
        //}
    },
    // Force a build before a debug
    "cmake.buildBeforeRun": true,
    // Automatically use CMake to configure Intellisense
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
}