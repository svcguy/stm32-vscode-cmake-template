{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "STLINK Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stlink",
            "v1": false,
            // Specify your path to ST-LINK_gdbserver.exe or remove if installed
            //  in the default location
            "stlinkPath": "C:\\ST\\STM32Cube\\ST-LINK-GDB\\ST-LINK_gdbserver.exe",
            // Specify your path to CubeProg or remove if installed in the 
            //  default location
            "stm32cubeprogrammer": "C:\\ST\\STM32Cube\\STM32CubeProgrammer\\bin",
            // Specify your device here
            "device": "STM32G031J6",
            // Change this to your devices SVD file
            "svdFile": "${workspaceFolder}\\stm32-svd\\g0\\STM32G031.svd",
            "runToMain": true
        }
    ]
}